{
  "watch": [
    "index.js",
    "handler.js",
    "plugins",
    "lib",
    "config.js"
  ],

  "ext": "js,json,ts",

  "ignore": [
    "session/*",
    "node_modules/*",
    "temp/*",
    "logs/*",
    "storage/cache/*",
    "*.log",
    "*.sqlite",
    "*.db",
    ".git/*",
    ".vscode/*",
    "public/*"
  ],

  "delay": "250ms",

  "exec": "node --trace-warnings --max-old-space-size=4096 index.js",

  "execMap": {
    "js": "node",
    "ts": "ts-node"
  },

  "events": {
    "restart": "echo üîÑ Restarting bot at $(date '+%H:%M:%S')...",
    "crash": "echo ‚ùå Bot crash detected! Waiting for file changes...",
    "start": "echo ‚úî Bot running...",
    "quit": "echo üîö Nodemon stopped."
  },

  "env": {
    "NODE_ENV": "development",
    "TZ": "Asia/Jakarta",
    "FORCE_COLOR": "true"
  },

  "verbose": false,

  "restartable": "rs",

  "signal": "SIGINT",

  "legacyWatch": false
}